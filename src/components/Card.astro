<li class="card sm:max-w-3xl max-w-sm hover:underline">
    <a href={url}>
        <figure class="flex bg-secondary rounded-xl overflow-hidden gap-8 items-center max-sm:flex-col">
            <img class="flex-1 w-1/2 max-sm:w-full" src={thumbnail} alt={`${title} ${lang === 'fr' ? 'miniature' : 'thumbnail'}`} width="755px" height="480px">
            <figcaption class="flex flex-col flex-1 sm:pr-8 max-sm:px-8 max-sm:pb-8 gap-4 sm:gap-8 items-center">
                <h2 class="text-2xl font-bold">{title}</h2>
                <p class="text-center">{description}</p>
            </figcaption>
        </figure>
    </a>
</li>
