---
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const {url, title, thumbnail, description} = Astro.props;
---
<li class="group">
    <a href={url}>
        <figure class="relative overflow-hidden rounded-xl max-w-[755px] max-h-[480px]">
            <img class="rounded-xl" src={thumbnail} alt={`${title} ${lang === 'fr' ? 'miniature' : 'thumbnail'}`} width="755px" height="480px">
            <figcaption class="absolute z-10 w-full h-full bg-gradient-to-t from-black rounded-xl top-0 left-0 lg:translate-y-full p-4 flex lg:group-hover:translate-y-0 flex-col gap-4 justify-end transition-all">
                <h2 class="text-xl font-bold">{title}</h2>
                <p>{description}</p>
            </figcaption>
        </figure>
    </a>
</li>