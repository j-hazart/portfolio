---
const {url, title, thumbnail, description} = Astro.props;

---
<!-- <a href={url}>{title}</a> -->
<li class="group">
    <a href={url}>
        <figure class="relative overflow-hidden rounded-xl">
            <img class="rounded-xl" src={thumbnail} alt="hey">
            <figcaption class="absolute z-10 w-full h-full bg-gradient-to-t from-black rounded-xl top-0 left-0 translate-y-full p-4 flex group-hover:translate-y-0 flex-col gap-4 justify-end transition-all">
                <h2 class="text-xl font-bold">{title}</h2>
                <p>{description}</p>
            </figcaption>
        </figure>
    </a>
</li>