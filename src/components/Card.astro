---
import { getLangFromUrl, useAltTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useAltTranslations(lang);
const {url, title, thumbnail, description} = Astro.props;
---
<li class="w-[calc(50%-1rem)] max-lg:w-full bg-secondary p-2 rounded-2xl hover:-translate-y-2 transition-all">
    <a href={url}>
        <figure class="flex max-md:flex-col gap-4 w-full">
            <img class="rounded-xl md:w-1/2" src={thumbnail} alt={`${title} ${t("thumbnail")}`} width="755px" height="480px">
            <figcaption class="flex-1 flex flex-col justify-center gap-4">
                <h2 class="text-center">{title}</h2>
                <p class="text-center">{description}</p>
            </figcaption>
        </figure>
    </a>
</li>
