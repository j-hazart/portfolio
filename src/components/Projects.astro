---
import CardsContainer from "./CardsContainer.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { getLangFromUrl, useAltTranslations,} from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useAltTranslations(lang);
const {allProjects} = Astro.props;
---
<BaseLayout 
  title={`Jessy Hazart | ${t("projects.pageTitle")}`}
  metadescription={t("meta.projects")}
>
  <main class="flex flex-col gap-16 pt-16 w-full max-w-7xl items-center text-primary">
    <h1 class="text-4xl font-bold capitalize">{t("projects.title")}</h1>
    <CardsContainer projects={allProjects} />
  </main>
</BaseLayout>
