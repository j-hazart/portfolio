---
import Header from "../components/Header.astro"
import { getLangFromUrl } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const { title, metadescription } = Astro.props
---
<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="description" content={metadescription} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative overflow-x-hidden bg-gradient-to-br from-light to-dark min-h-screen h-max max-w-screen flex flex-col items-center p-8 mix-blend-lighten">
        <Header />
        <slot />
		<div class="bg-cover bg-center bg-no-repeat h-full w-full absolute top-0 left-0 opacity-5 -z-10" style="background-image: url('/assets/pyragray.svg');"></div>
	</body>
</html>
