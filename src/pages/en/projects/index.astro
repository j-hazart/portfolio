---
import Card from "../../../components/Card.astro";
import BaseLayout from "../../../layouts/BaseLayout.astro";
const allProjects = await Astro.glob("./*.md");
---

<BaseLayout 
title="Jessy Hazart | Projets"
metadescription="Explore my projects gallery and discover a diverse collection of creations in the technologies I master."
>
  <main
    class="flex flex-col gap-16 pt-16 w-full max-w-7xl items-center text-primary"
  >
    <h1 class="text-4xl font-bold capitalize">My Projects</h1>
    <ul
      class="flex flex-wrap gap-16 justify-center"
    >
      {
        allProjects.map((project) => (
          <Card
            url={project.url}
            title={project.frontmatter.title}
            thumbnail={project.frontmatter.thumbnail}
            description={project.frontmatter.description}
          />
        ))
      }
    </ul>
  </main>
</BaseLayout>
