---
import CardsContainer from "../../../components/CardsContainer.astro";
import BaseLayout from "../../../layouts/BaseLayout.astro";
const allProjects = await Astro.glob("./*.md");
---
<BaseLayout 
  title="Jessy Hazart | Projects"
  metadescription="Explore my projects gallery and discover a diverse collection of creations in the technologies I master."
>
  <main class="flex flex-col gap-16 pt-16 w-full max-w-7xl items-center text-primary">
    <h1 class="text-4xl font-bold capitalize">My Projects</h1>
    <CardsContainer projects={allProjects} />
  </main>
</BaseLayout>
