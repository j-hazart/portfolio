---
import BaseLayout from "../../layouts/BaseLayout.astro";
import avatar from "/assets/jessy-h.webp"
import linkedin from "../../assets/linkedin.svg"
import github from "../../assets/github.svg"
import doc from "../../assets/cv.svg"
import cv from "../../docs/jessy_hazart_cv.pdf"
---

<BaseLayout 
    title="Jessy Hazart | Développeur web" 
    lang="fr" 
    metadescription="Découvrez le portfolio de Jessy Hazart, développeur web passionné. Explorez mes projets, compétences et expériences. Connectez-vous avec moi sur LinkedIn, explorez mes projets sur GitHub et consultez mon CV pour en savoir plus."
>
    <main class="text-primary w-full  max-w-7xl h-full min-h-screen -mt-[4.25rem] -mb-8">
        <section class="grid grid-cols-1 lg:grid-cols-2 -mx-8 place-items-center">
            <div id="content" class="flex flex-col justify-center items-center h-screen w-full bg-cover bg-center bg-no-repeat p-8">
                <div  class="flex flex-col justify-center items-center gap-4 max-lg:backdrop-brightness-50 backdrop-blur-sm max-lg:p-4 max-lg:shadow-2xl rounded-2xl max-lg:border-2 border-primary">
                <h1 class="capitalize text-6xl font-bold text-center ">jessy hazart</h1>
                <p class="text-xl lg:text-3xl capitalize text-center px-2">Développeur Web - JS | React | Express</p>
                <div class="text-tertiary flex gap-4">
                    <a href="https://www.linkedin.com/in/jessy-hazart3250/" target="_blank">
                        <img class="opacity-50 hover:opacity-100" src={linkedin} title="jessy-hazart3250" alt="linkedin logo" width="24px" height="24px"/>
                    </a>
                    <a href="https://github.com/j-hazart" target="_blank">
                        <img class="opacity-50 hover:opacity-100" src={github} title="j-hazart" alt="github logo" width="24px" height="24px"/>
                    </a>
                    <a href={cv} target="_blank">
                        <img class="opacity-50 hover:opacity-100" src={doc} title="CV" alt="github logo" width="24px" height="24px"/>
                    </a>
                </div>
            </div>
        </div>
            <div style={`background-image: url(${avatar})`} class="h-screen w-full max-lg:hidden bg-cover bg-center bg-no-repeat"></div>
        </section>
    </main>
</BaseLayout>

<style>
    #content{
        background-image: url("/assets/jessy-h-medium.webp")
    }
    @media (min-width: 1024px) {
    #content {
        background: none;
    }
}
</style>