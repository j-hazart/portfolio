---
import CardsContainer from "../../../components/CardsContainer.astro";
import BaseLayout from "../../../layouts/BaseLayout.astro"
const allProjects = await Astro.glob('./*.md');
---
<BaseLayout 
    title="Jessy Hazart | Projets"
    metadescription="Explorez ma galerie de projets et découvrez une collection diversifiée de réalisations dans les technologies que je maîtrise."
>
    <main class="flex flex-col gap-16 pt-16 w-full  max-w-7xl items-center text-primary">
        <h1 class="text-4xl font-bold capitalize">Mes Projets</h1>
        <CardsContainer projects={allProjects} />
    </main>
</BaseLayout>

